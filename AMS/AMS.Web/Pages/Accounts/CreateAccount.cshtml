@page
@model AMS.Web.Pages.Accounts.CreateAccountModel
@{

}
        <form id="registerForm" asp-route-returnUrl="/" method="post">
            <h2>Add a new account.</h2>
            <hr />
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Name">Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Cash" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Cash">Cash (Amount in $)</label>
                <span asp-validation-for="Cash" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Recieveable" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Recieveable">Recieveable</label>
                <span asp-validation-for="Recieveable" class="text-danger"></span>
            </div>
            <button id="createAccountSubmit" type="submit" class="w-50 btn btn-md btn-primary">Add Account</button>
        </div>
        <div class="col-md-4">
            <div class="form-floating mb-3">
                <input asp-for="UserType" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="UserType">UserType</label>
                <span asp-validation-for="UserType" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="AccountType" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="AccountType">Account Type</label>
                <span asp-validation-for="AccountType" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>